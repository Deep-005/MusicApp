<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp"
    tools:context=".Activities.SettingsActivity">

    <TextView
        android:id="@+id/setTheme"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/set_theme"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="2dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/colors"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <ImageView
                android:id="@+id/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle"
                android:background="@color/white"
                android:contentDescription="@string/song_name" />

            <ImageView
                android:id="@+id/blackTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check"
                android:layout_gravity="center"
                android:contentDescription="@string/tick"
                android:visibility="invisible"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <ImageView
                android:id="@+id/blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle"
                app:tint="#2196F3"
                android:background="@color/white"
                android:contentDescription="@string/song_name" />

            <ImageView
                android:id="@+id/blueTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check"
                android:layout_gravity="center"
                android:contentDescription="@string/tick"
                android:visibility="invisible"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <ImageView
                android:id="@+id/pink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle"
                android:contentDescription="@string/song_name"
                android:background="@color/white"
                app:tint="#E91E63" />

            <ImageView
                android:id="@+id/pinkTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check"
                android:layout_gravity="center"
                android:contentDescription="@string/tick"
                android:visibility="invisible"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <ImageView
                android:id="@+id/red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle"
                android:background="@color/white"
                android:contentDescription="@string/song_name"
                app:tint="#F30606" />

            <ImageView
                android:id="@+id/redTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check"
                android:layout_gravity="center"
                android:contentDescription="@string/tick"
                android:visibility="invisible"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <ImageView
                android:id="@+id/purple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle"
                android:background="@color/white"
                android:contentDescription="@string/song_name"
                app:tint="#8456D6" />

            <ImageView
                android:id="@+id/purpleTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check"
                android:layout_gravity="center"
                android:contentDescription="@string/tick"
                android:visibility="invisible"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/sortBy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/sort_by"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:paddingStart="10dp"
            android:gravity="center|start"/>

        <ImageView
            android:id="@+id/sort"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/sort"
            android:layout_gravity="center_vertical"
            android:padding="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/versions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/version"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_marginTop="2dp" />

</LinearLayout>