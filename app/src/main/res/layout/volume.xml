<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="end">

    <com.lukelorusso.verticalseekbar.VerticalSeekBar
        android:id="@+id/verticalBar"
        android:layout_width="10dp"
        android:layout_height="200dp"
        app:vsb_bar_corner_radius="15dp"
        android:layout_margin="15dp"
        app:vsb_progress="0"
        app:vsb_max_value="15"
        app:vsb_thumb_placeholder_src="@drawable/adjust"
        app:vsb_use_thumb_to_set_progress="true"
        app:vsb_bar_progress_gradient_start="@color/blue"
        app:vsb_bar_progress_gradient_end="@color/purple"/>

</LinearLayout>